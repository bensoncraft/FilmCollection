@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<FilmCollection.Models.ApplicationResponse>

<!-- Page to show list of movies-->

<div>
    <h2>Here is the list of movies that have been added: </h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (FilmCollection.Models.ApplicationResponse x in Model)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
            }
        </tbody>
    </table>
</div>
